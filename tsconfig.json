{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "es2022"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "wagmi": [
        "./lib/shims/wagmi"
      ],
      "wagmi/chains": [
        "./lib/shims/wagmi-chains"
      ],
      "wagmi/connectors": [
        "./lib/shims/wagmi-connectors"
      ],
      "@web3modal/wagmi/react": [
        "./lib/shims/web3modal-wagmi-react"
      ],
      "@tanstack/react-query": [
        "./lib/shims/react-query"
      ],
      "siwe": [
        "./lib/shims/siwe"
      ],
      "ethers": [
        "./lib/shims/ethers"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
